@model MongoDB.WindowsAzure.Manager.Models.ServerStatus
<h2>
    Log
</h2>
<div>
    <a href="#" id="refreshLog">Refresh...</a>
</div>
<div>
    @Html.ActionLink("Rotate log file...", "LogRotate", new { id = Model.Id })
</div>
<div>
    @Html.ActionLink("Download log from Azure...", "DownloadAzureLog", new { id = Model.Id })
</div>
<div id="logFetchStatus">
    Acquiring the instance's log...
</div>
<pre class="pre pre-scrollable" id="instanceLog">
</pre>
<div style="clear: both">
</div>
